<?xml version="1.0" encoding="UTF-8"?>
<Installer>
	<Name>Natron</Name>
	<Version>_VERSION_</Version>
	<Title>Natron</Title>
	<Publisher>INRIA</Publisher>
	<StartMenuDir>Natron</StartMenuDir>
	<ProductUrl>http://natron.inria.fr</ProductUrl>
	<RunProgram>@TargetDir@/Natron</RunProgram>
	<UninstallerName>NatronSetup</UninstallerName>
	<InstallerWindowIcon>icon.png</InstallerWindowIcon>
	<Logo>logo.png</Logo>
	<Watermark>watermark.png</Watermark>
        <AdminTargetDir>/opt/@ProductName@</AdminTargetDir>
	<TargetDir>@HomeDir@/@ProductName@</TargetDir>
	<RemoteRepositories>
		<Repository>
			<Url>http://repo.natronvfx.com/branches/_BRANCH_/_OS_</Url>
			<Enabled>1</Enabled>
		</Repository>
	</RemoteRepositories>
</Installer>
